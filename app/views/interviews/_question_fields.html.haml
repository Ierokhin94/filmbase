.nested-fields
  .panel.panel-default
    .panel-body
      .row
        .col-md-5
          .form-group
            =f.label :Вопрос
            =f.text_area :body, class: 'form-control'
      = link_to_remove_association "Удалить", f, class: 'btn btn-danger btn-sm'
    = f.fields_for :answers do |a|
      = render 'answer_fields', f: a
    .links
      = link_to_add_association "Добавить ответ", f, :answers, class:'btn btn-primary btn-xs'
